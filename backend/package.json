{
  "name": "bcfi-hr-backend",
  "version": "1.0.0",
  "description": "Backend for the Automated HR Filing & Email Notification System",
  "main": "dist/index.js",
  "scripts": {
    "prisma:generate": "prisma generate",
    "build": "prisma generate && ncc build src/server.ts -o dist -m -e @prisma/client && node scripts/copy-prisma.js",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "backfill-interview-eligible": "node ./scripts/backfill-interview-eligible.js",
    "test": "vitest run --coverage"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^4.0.0",
    "mysql2": "^3.10.1",
    "nodemailer": "^7.0.6",
    "otp-generator": "^4.0.1",
    "pdfkit": "^0.17.2"
  },
  "devDependencies": {
    "@prisma/nextjs-monorepo-workaround-plugin": "^6.15.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.3.1",
    "@types/nodemailer": "^7.0.1",
    "@types/otp-generator": "^4.0.2",
    "@types/pdfkit": "^0.17.3",
    "@vercel/ncc": "^0.38.4",
    "@vitest/coverage-v8": "^3.2.4",
    "prisma": "^6.15.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
